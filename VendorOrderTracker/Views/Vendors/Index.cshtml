@{
  Layout = "_Layout";
}

@using Store.Models;

<h1>Vendors:</h1>

@if (@Model.Count == 0)
{
  <h3>No Vendors have been added yet!</h3>
}

<ul>
  @foreach (Vendor vendor in Model)
  {
    <li>
      <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a>
        <form action="/vendors/@vendor.Id/delete" method="post"> <button type="submit">x</button></form>
      </h3>
    </li>
  }
</ul>

<button onclick="window.location.href='/vendors/new'">Add a new Vendor</button>
<form action="/vendors/delete" method="post"> <button type="submit">Delete All Vendors</button></form>
<p><a href='/'>Back home</a></p>
