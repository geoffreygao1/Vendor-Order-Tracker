@using Store.Models;

<h2>Vendor Name: </h2>
<p>@Model["vendor"].Name</p>
<h3>Vendor Description:</h3>
<p>@Model["vendor"].Description</p>
<h3>Orders:</h3>

<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li>
      <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a>
    </li>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<form action='/vendors/@Model["vendor"].Id/orders/delete' method="post"><button type="submit">Delete All Orders</button>
</form>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>

